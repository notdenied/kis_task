{
    "tasks": [
        {
            "type": "shell",
            "command": "rm ${fileDirname}/${fileBasenameNoExtension} || true",
            "label": "rm binary",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "cppbuild",
            "label": "build c++",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++20",
                // "-std=c++17",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-fsanitize=address,undefined,leak",
                "-O0",
                "-fconcepts-diagnostics-depth=10",
                "-fconstexpr-ops-limit=1000000000",
                "-fconstexpr-loop-limit=1000000000",
                // "-fconstexpr-depth=1000000000", // clang
                // "-fconstexpr-steps=1000000000" // clang
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "dependsOn": [
                "rm binary",
                "build c++"
            ],
            "label": "full build",
            "dependsOrder": "sequence"
        },
    ],
    "version": "2.0.0"
}